                  <tr>
                    <th class="header">No.</th>
                    <th class="header">Sekolah</th>
                    <th class="header">Siswa</th>
                    <th class="header">Tanggal Pembayaran</th>
                    <th class="header">kategori</th>
                    <th class="header">Nominal</th>
                  </tr>
                </thead>
                
                <tbody>
                  <% for(var i=0; i<data.length; i++){ %>
                  <tr>
                    <td><%= i+1%></td>
                    <td><%= data[i].sekolah%></td>
                    <td><%= data[i].nama%></td>
                    <td><%= data[i].tgl2%></td>
                    <td><%= data[i].jenis%></td>
                    <td style="text-align: right;"><%= numberWithCommas(data[i].nominal)%> ,-</td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>  
