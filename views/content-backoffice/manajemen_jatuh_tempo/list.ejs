<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Data Jatuh Tempo</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a>
        </li>
        <li class="active">Data</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-header header-line">
           <a class="btn btn-primary btn-embossed" href="/manajemen_jatuh_tempo/insert" role="button"><i class="fa fa-plus" aria-hidden="true"></i>Tambah Data</a>
        </div>
        <div class="panel-content pagination2">
          <table class="table table-bordered table-striped table-hover" id="data">
            <thead>
              <tr>
                <th class="header">No.</th>
                <th class="header">Sekolah</th>
                <th class="header">Nama</th>
                <th class="header">NIPD</th>
                <th class="header">NISN</th>
                <th class="header">Option</th>
              </tr>
            </thead>
            
            <tbody>
              <%for(var i=0; i<data.length; i++){%>
            <tr>
              <td><%= i+1%></td>
              <td><%= data[i].sekolah%></td>
              <td><%= data[i].nama%></td>
              <td><%= data[i].nipd%></td>
              <td><%= data[i].nisn%></td>
              
              <td>
                <center>
                <!-- <ul class="list-inline text-center">
                  <li><a class="btn btn-warning btn-embossed btn-sm" href="/manajemen_jatuh_tempo/edit/1" role="button" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></li>
                  <li class="separator">|</li>
                  <li><a class="btn btn-danger btn-embossed btn-sm" href="#" role="button" onclick="return confirm('Apakah anda yakin untuk menghapus data ini ?');"><i class="fa fa-trash-o" aria-hidden="true"></i></a></li>
                  
                  
                </ul> -->
                <%for(var e=0; e<data[i].reserved.length; e++){%>
                <ul class="list-inline text-center" style="margin-top: 5px;">
                  <li>
                    <div class="dropdown" style="padding-right: 0;margin-right: 0;">
                      <button type="button" class="btn btn-success btn-embossed btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= data[i].reserved[e].kelas%> (<%= data[i].reserved[e].tahun_ajaran%>)<span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/manajemen_jatuh_tempo/edit/<%= data[i].reserved[e].id%>">Lihat</a></li>
                        <li><a href="/manajemen_jatuh_tempo/delete/<%= data[i].reserved[e].id%>" onclick="return confirm('Apakah anda yakin untuk menghapus data ini ?');">Hapus</a></li>
                      </ul>
                    </div>
                  </li>
                </ul>
                <%}%>
                </center>
              </td>
            </tr>
            <%}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2021 </span>
        <span>Yayasan BAJ Keluarga H.M Sulchan</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

