            $.post( "/manajemen_akun/submit_edit", {id:$( "#id" ).val(), kode: $( "#kode_depane" ).val()+''+$( "#kode_belakange" ).val(), nama: $( "#namae" ).val(), balance: $( "#balancee" ).val()})
        .done(function( data ) {
            console.log(data)
                    
            if(data.data==1){
                    alert("Berhasil!");
                    location.reload();
                  }else{
                    alert("Gagal Kode Sudah Ada !");
                  }  
        });

        }

    }

